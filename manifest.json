{
    "manifest_version": 3,
    "name": "Select and Export",
    "version": "0.1.0",
    "default_locale": "en",
    "description": "__MSG_extDescription__",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Select and Export",
        "default_icon": "s_e.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ]
}